.post-details
    width: 95%
    margin: 0 10px 0 10px
    max-width: 620px
    inline-height: 1.8em
    a:not(.nonstyle)
        text-decoration: none
        color: #3A97FF
        box-shadow: 0 1px 0 #555
        &:hover
            box-shadow: 0 1px 0 #3A97FF
    .post-title
        margin: 0 10px 0 0
        margin-bottom: 10px
        h1
            font-size: 1.5em
            font-weight: normal
            margin-block: 0
    .post-meta
        margin-bottom: 20px
        font-size: 14px
        color: #999
    .post-content
        h1
        h2
        h3
        h4
        h5
        h6
            margin-block: 0
            margin-inline: 0
            margin-bottom: 15px
            line-height: 1.2em
        h1
            margin: 50px 0 30px
            font-size: 1.4em
        h2
            margin: 40px 0 25px
            font-size: 1.3em
        h3
            margin: 30px 0 20px
            font-size: 1.2em
        h4  
            margin: 20px 0 15px
            font-size: 1.1em
        h5
            margin: 15px 0 10px
            font-size: 1em
        h6
            font-size: 0.9em
        p
            margin-block: 0
            line-height: 1.8em
            &:not(:last-child)
                margin: 0 0 10px
        img
            max-width: 100%
            display: block
            margin: 0 auto
        blockquote
            margin-block: 0
            margin-inline: 0
            padding:10px 0 10px 10px
            background-color: #eee
            border-left: 7px solid #999
            margin: 0 0 30px
            &>p
                margin: 0 0
        kbd
            padding: 1px 3px
            background-color: #eee
            box-shadow: 1px 2px #999
            border-radius: 3px
        mark
        code:not(.hljs)
            padding: 1px 3px
            background-color: #eee
            border-radius: 3px
        table
            text-align: left
            border-collapse: collapse
        th
        td
            padding: 5px
            border: 1px solid #eee
        tr:nth-child(even)
            background-color: #eee
        th
            font-weight: 400
            background-color: #ddd
        table
            margin: 1em 0
            width: 100%
        hr
            margin: 35px 0 40px
            border-style: solid
            border-width: initial
            border-color: #aaa

.katex > .katex-html
    white-space: normal

.katex .base
    margin-top: 5px
    margin-bottom: 5px
