.main-container
    display: flex
    flex-wrap: wrap

.pinned-chapter
    font-size: 22px
    font-weight: bold
    margin: 0 0 10px 10px

.post-chapter
    font-size: 22px
    font-weight: bold
    margin: 30px 0 10px 10px

.pinned-list, .post-list
    width: 100%
    margin: 0 10px

.pinned-item, .post-item
    width: 100%
    text-align: left
    &:not(:last-child)
        margin-bottom: 10px

.pinned-item-key, .post-item-key
    font-weight: bold
    font-size: 1em

.pinned-item-date, .post-item-date
    font-size: 0.9em
    color: #555
    margin-left: 0.5em

.pinned-item-title, .post-item-title
    font-size: 1em
    margin-left: 0.4em

.pinned-item-abstract, .post-item-abstract
    font-size: 0.8em
    color: #555
    margin: 8px 0 0 0
