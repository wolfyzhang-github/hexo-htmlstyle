.main-container
    display: flex
    flex-wrap: wrap

.pinned-chapter
    font-size: 22px
    font-weight: bold
    margin: 0 0 10px 10px

.post-chapter
    font-size: 22px
    font-weight: bold
    margin: 30px 0 10px 10px

.pinned-list
    width: 100%
    margin: 0 10px

.post-list
    width: 100%
    margin: 0 10px

.pinned-item
    width: 100%
    text-align: left
    &:not(:last-child)
        margin-bottom: 10px

.post-item
    width: 100%
    text-align: left
    &:not(:last-child)
        margin-bottom: 10px

.pinned-item-date
    font-size: 0.9em
    color: #555

.post-item-date
    font-size: 0.9em
    color: #555

.pinned-item-title
    font-size: 1em
    margin-left: 1em

.post-item-title
    font-size: 1em
    margin-left: 1em

.pinned-item-abstract
    font-size: 0.8em
    color: #555
    margin: 8px 0 0 0


.post-item-abstract
    font-size: 0.8em
    color: #555
    margin: 8px 5px 0 0
