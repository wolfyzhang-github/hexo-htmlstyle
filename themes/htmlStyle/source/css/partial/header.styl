.post-header
    .sticky-nav
        position: sticky
        top: 0
        background: rgba(255, 255, 255, 0.8)
        backdrop-filter: blur(10px)
        padding: 10px
        z-index: 1000

.index-header
    .index-intro
        padding: 40px 10px 20px
        h1
            font-size: 2.5em
            margin-bottom: 10px
        p
            font-size: 1.2em
            color: #666

    .index-description
        margin: 0
        padding: 0
        font-size: 16px
        color: #666

.header-container
    margin: 20px 10px;
    display: inline-flex;
    justify-content: center;

.header-menu
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;

.header-menu-home
    font-size: 40px;

.header-menu-links,
.header-menu-about
    font-size: 23px;
    margin-left: 25px;

.header-menu-inside
    width: 100%;
    display: flex;
    align-items: baseline;

.post-header-wrapper
    position: sticky
    top: 0
    background: rgba(255, 255, 255, 0.8)
    backdrop-filter: blur(10px)
    z-index: 1000
    width: 100%

.index-header-wrapper
    text-align: left
    max-width: 640px
    width: 100%
    margin: 0 auto
    padding: 0 10px

.nav-content
    padding: 10px
    max-width: 640px
    margin: 0 auto
    width: 100%

.breadcrumb
    display: flex
    align-items: center

.chevron
    margin: 0 8px
    color: var(--chevron-color)

.home-link, .breadcrumb-link
    color: #0077cc
    text-decoration: none
    transition: color 0.3s ease

    &:hover
        color: #005fa3
        text-decoration: underline

.current-page
    color: #333
